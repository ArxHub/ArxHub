{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~/boot/*": ["./boot/*"],
      "~/core/*": ["./core/*"],
      "~/plugins/*": ["./plugins/*"],
      "~/stdlib/*": ["./stdlib/*"]
    }
  },
  "include": ["."],
  "exclude": ["node_modules", "dist"]
}
