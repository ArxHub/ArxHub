{
  "name": "@arxhub/plugin-web-app",
  "version": "0.1.0",
  "description": "Provides the ArxHub web user interface.",
  "keywords": [
    "arxhub"
  ],
  "license": "AGPL-3.0-or-later",
  "author": "",
  "type": "module",
  "exports": {
